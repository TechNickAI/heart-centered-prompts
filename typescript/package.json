{
  "name": "heart-centered-prompts",
  "version": "0.3.0",
  "description": "Heart-centered system prompts for AI assistants",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
